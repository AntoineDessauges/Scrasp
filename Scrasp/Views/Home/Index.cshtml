@using Scrasp.Models;

@{
    ViewBag.Title = "Accueil";
    List<string> todolist = ViewBag.Todo;
}

@section scripts{
    <script src="@Url.Content("~/Scripts/custom.js")"></script>
}

@if (ViewBag.Message != null)
{
    <div class="alert-info">@ViewBag.Message</div>
}
<div class="container">
    <h3>A faire</h3>
    <ul>
        @foreach (string item in todolist)
        {
            <li>@item</li>
        }
    </ul>
</div>
<div class="container">
    <h3>Données</h3>
    <h4>Stories</h4>
    @foreach (Story story in ViewBag.Stories)
    {
        <li>@story.Description @story.Id</li>
    }
    <h4>Tâches</h4>
    @foreach (Task task in ViewBag.tasks)
    {
        <li>@task.Description  @task.Id</li>
    }
    <h4>Personnes</h4>
    @foreach (User user in ViewBag.Users)
    {
        <li>@user.UserName @user.Id</li>
    }
</div>
<div class="container">
    <h3>Actions</h3>
    <a href="/add">Ajouter un utilisateur supplémentaire</a><br />
    <a href="/rename/9">Changer le username de l'utilsateur qui a l'id 9 à '???'</a><br />
    <a href="/delete/9">Supprimer l'utilisateur qui a l'id 9</a><br />
    <a href="/changeid/9/100">Mettre à 100 l'id de l'utilisateur qui a l'id 9</a><br />
    <a href="/changeid/9/2">Tenter de mettre à 2 l'id de l'utilisateur qui a l'id 9 -> exception</a><br />
</div>
